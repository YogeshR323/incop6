extends layout

block content
  h2 Add Location

  form(action="/addLocation",method="post", enctype="multipart/form-data")
    .form-group
      label Name of location
      input#title.form-control(type="text",name="title")

    .form-group
      label Description
      input#description.form-control(type="text",name="description")
      
    .form-group
      label Upload Image
      input#locationimage.form-control(type='file' name='locationimage' )
    //- .mt-3

    .col-md-12.text-center.mb-3
      input.btn.btn-block.mybtn.btn-primary.tx-tfm(type="submit",value="Upload")


     
